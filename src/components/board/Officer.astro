---
import { MdEmail } from "react-icons/md";
import { Image } from "astro:assets";
const { name, position, picture, email } = Astro.props;
---

<div class="text-white">
  <div
    class="group md:w-[20vw] w-[35vw] aspect-[334/440] bg-gradient-to-t from-ieee-blue-100/5 to-ieee-blue-100/25 rounded-[10%] flex flex-col items-center relative border border-white/10 shadow-sm hover:shadow-glow transition-all duration-300 hover:-translate-y-[0.3vw] focus-within:shadow-glow"
  >
    <div
      class="relative md:w-[18vw] w-[31vw] md:rounded-[1.5vw] rounded-[3vw] overflow-hidden mt-[5%] mb-[3%]"
    >
      <Image
        src={picture}
        alt={`${name} portrait`}
        class="w-full h-full object-cover"
        width={334}
        height={440}
      />
      <div
        class="pointer-events-none absolute inset-x-0 bottom-0 h-1/2 md:h-1/3 bg-gradient-to-t from-black/80 via-black/50 to-transparent"
      >
      </div>
      <div
        class="absolute inset-x-0 bottom-[1.2vw] flex justify-center px-[1vw]"
      >
        <span
          class="inline-flex items-center justify-center rounded-full bg-black/80 text-white backdrop-blur-md px-[1.3vw] py-[0.45vw] md:text-[1vw] text-[2vw] font-semibold uppercase tracking-wide leading-none shadow-[0_0.6vw_2.2vw_rgba(0,0,0,0.55)] ring-2 ring-white/20 text-center"
        >
          {position}
        </span>
      </div>
    </div>

    <div class="w-[85%] flex flex-col items-center text-center">
      <p
        data-inview
        class="opacity-0 in-view:animate-fade-right md:text-[1.6vw] text-[3.2vw] font-semibold tracking-tight md:leading-[2.1vw] leading-[4.2vw]"
      >
        {name}
      </p>
    </div>

    <div class="w-[85%] pb-[1.2vw] pt-[0.6vw] flex justify-center">
      <a
        href={`mailto:${email}`}
        class="group/email inline-flex items-center gap-[0.6vw] rounded-full bg-white/5 hover:bg-white/10 border border-white/10 px-[1.2vw] py-[0.4vw] text-ieee-yellow md:text-[0.85vw] text-[1.7vw] transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-ieee-yellow/60"
        aria-label={`Email ${name}`}
        title={email}
      >
        <MdEmail
          className="md:text-[1.1vw] text-[2.2vw] opacity-80 group-hover/email:opacity-100 transition-opacity"
        />
        <span class="truncate max-w-[14vw] md:max-w-[12vw]">{email}</span>
      </a>
    </div>
  </div>
</div>
