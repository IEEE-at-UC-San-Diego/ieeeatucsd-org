<style>
    .hidden {
        display: none;
    }
    #userInfo {
        transition: all 0.3s ease-in-out;
    }
    .modal {
        background: rgba(0, 0, 0, 0.5);
    }
    .modal::backdrop {
        background: rgba(0, 0, 0, 0.5);
    }
